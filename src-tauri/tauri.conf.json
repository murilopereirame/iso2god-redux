{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ISO2GOD Redux",
  "version": "0.1.0",
  "identifier": "dev.murilopereira.iso2god.redux",
  "mainBinaryName": "ISO2GOD Redux",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ISO2GOD Redux",
        "url": "/",
        "width": 1000,
        "height": 600
      },
      {
        "label": "select-iso",
        "title": "Select ISO",
        "parent": "main",
        "url": "/select-iso",
        "create": false,
        "width": 400,
        "height": 800,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "macOS": {
      "bundleName": "ISO2GOD Redux"
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
